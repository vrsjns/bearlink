datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  password String
  name     String?
  role     Role   @default(USER)
  createdAt DateTime @default(now())
}

enum Role {
  USER
  ADMIN
}